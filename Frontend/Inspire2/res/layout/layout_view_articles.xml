<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:id="@+id/article_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
	
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    
    <Space android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout android:id="@+id/upvote_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CCFFFFFF"
        android:gravity="center"
       >

       <TextView
           android:id="@+id/likes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="LIKES"
           android:textColor="#003" />
       
       <TextView
           android:id="@+id/comments"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="COMMENTS"
           android:textColor="#003" />

 	</LinearLayout>
 	<Space android:layout_width="match_parent"
        android:layout_height="30dp"/>
	
 	<TextView
           
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/addcomment"
           android:textColor="#888" />
 	
 	<EditText android:id="@+id/user_comment"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="@string/entercomment"
           />
 	<Button
            android:id="@+id/submit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
			android:textColor="#FFF"
			android:textSize="15sp"        
            android:text="@string/submit" />
     
 	
 	
 	
 	
    <LinearLayout android:id="@+id/comments_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="120dp"
        android:orientation="vertical"
       >
		
		<TextView
           android:id="@+id/commentsHeader"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="50sp"
           android:textStyle="bold|italic"
           android:text="@string/comment"
           android:textColor="#FFF" />
 
        
    </LinearLayout>
    
</LinearLayout>
</ScrollView>